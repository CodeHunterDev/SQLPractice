<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:text="@string/sandbox_description"
                style="@style/header"/>

            <TextView
                android:id="@+id/all_tables_description"
                style="@style/table_description"/>

            <AutoCompleteTextView
                android:id="@+id/query_entry_sandbox"
                style="@style/query_input"/>

            <TextView
                android:id="@+id/submit_query_sandbox"
                android:text="@string/submit_query"
                style="@style/rounded_button"/>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
